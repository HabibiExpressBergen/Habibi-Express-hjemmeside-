  </div>  <script>
    // Preview selected photos
    const photos = document.getElementById('photos');
    const preview = document.getElementById('preview');
    photos?.addEventListener('change', () => {
      preview.innerHTML = '';
      [...photos.files].slice(0,8).forEach(file => {
        const img = document.createElement('img');
        img.alt = file.name;
        img.src = URL.createObjectURL(file);
        preview.appendChild(img);
      });
    });

    // Simple client-side handler – replace with your backend / email service
    const form = document.getElementById('bookingForm');
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      if(!form.reportValidity()) return;

      // If you have Formspree/EmailJS/backend, send here.
      // Example: await fetch('YOUR_ENDPOINT', { method:'POST', body:new FormData(form) });

      alert('Takk! Bestillingen din er sendt. Vi kontakter deg så snart som mulig.');
      form.reset();
      preview.innerHTML = '';
    });

    // Referral button – link til eget skjema når klart
    document.getElementById('referralBtn').addEventListener('click', (e)=>{
      e.preventDefault();
      // Sett lenken når du har egen side, f.eks. 
      // window.location.href = '/hjelp-noen-a-flytte.html';
      alert('Eget skjema for «Hjelp noen å flytte – få 1000 kr» kommer snart.');
    });
